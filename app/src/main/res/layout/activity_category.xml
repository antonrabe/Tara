<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ateneo.cie199.tara.Category">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-17dp">

        <ImageView
            android:id="@+id/eat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/watch"
            android:layout_alignLeft="@+id/watch"
            android:layout_alignStart="@+id/watch"
            app:srcCompat="@drawable/food" />

        <ImageView
            android:id="@+id/watch"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/movie"
            android:layout_above="@+id/play"
            android:layout_alignLeft="@+id/play"
            android:layout_alignStart="@+id/play" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ball"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="Click this to visit profile!"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
