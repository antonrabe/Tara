<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="edu.ateneo.cie199.tara.LoginActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btn_login"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btn_login"
            android:textColor="#FFFFFF"
            android:layout_marginTop="180dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_password"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@+id/txv_username"
            android:layout_alignStart="@+id/txv_username"
            android:layout_below="@+id/txv_username"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="Password:"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_username"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Username:"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_password"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txv_username"
            android:textColor="#FFFFFF"
            android:layout_alignStart="@+id/txv_username"
            android:layout_below="@+id/txv_username"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="Password:"
            android:textAllCaps="true"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_username"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Login!"
            android:layout_above="@+id/btn_register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/btn_login"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btn_login"
            android:layout_marginBottom="12dp"
            android:text="Register!" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_password"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@android:color/white"
            android:textColor="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:password="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
