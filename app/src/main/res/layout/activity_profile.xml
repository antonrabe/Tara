<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ateneo.cie199.tara.ProfileActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/madi" />

        <TextView
            android:id="@+id/txv_name"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:layout_below="@+id/img_profile"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txv_events"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="23dp"
            android:text="My Events"
            android:layout_below="@+id/txv_username"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txv_username"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txv_contact"
            android:layout_alignStart="@+id/txv_contact"
            android:layout_below="@+id/txv_contact"
            android:text="Username" />

        <TextView
            android:id="@+id/txv_contact"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txv_company"
            android:layout_alignStart="@+id/txv_company"
            android:layout_below="@+id/txv_company"
            android:text="Contact" />

        <TextView
            android:id="@+id/txv_company"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txv_name"
            android:layout_alignStart="@+id/txv_name"
            android:layout_below="@+id/txv_name"
            android:text="Company" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
