<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="edu.ateneo.cie199.tara.RegisterActivity">

    <!--<RelativeLayout-->
    <!--android:layout_width="368dp"-->
    <!--android:layout_height="495dp"-->
    <!--tools:layout_editor_absoluteX="8dp"-->
    <!--tools:layout_editor_absoluteY="0dp">-->


    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_profile"
        android:layout_marginTop="40dp"
        android:text="Full Name:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_company"
        android:layout_marginTop="27dp"
        android:text="Phone Number:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_name"
        android:layout_marginTop="26dp"
        android:text="School/Company:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_contact"
        android:layout_marginTop="22dp"
        android:text="Username:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_contact"
        android:layout_marginTop="60dp"
        android:text="Password:"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edt_company"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/txv_company"
        android:layout_alignBottom="@+id/txv_company"
        android:layout_toEndOf="@+id/txv_company"
        android:layout_toRightOf="@+id/txv_company"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/txv_name"
        android:layout_alignBottom="@+id/txv_name"
        android:layout_toEndOf="@+id/txv_password"
        android:layout_toRightOf="@+id/txv_password"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edt_company"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edt_company"
        android:layout_marginBottom="45dp"
        android:text="Register!" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txv_name"
        android:layout_alignEnd="@+id/txv_contact"
        android:layout_alignRight="@+id/txv_contact"
        android:layout_marginBottom="41dp"
        android:text="Upload" />

    <EditText
        android:id="@+id/edt_contact"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_company"
        android:layout_toEndOf="@+id/txv_contact"
        android:layout_toRightOf="@+id/txv_contact"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/edt_contact"
        android:layout_alignRight="@+id/edt_name"
        android:layout_alignEnd="@+id/edt_name" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edt_username"
        android:layout_below="@+id/edt_username"
        android:backgroundTint="@android:color/white"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:password="true" />

</RelativeLayout>
